<!-- Hibernate 4 Annotation SessionFactory Bean definition-->
	<bean id="SessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="packagesToScan">
			<list>
				<value>com.scp.spring.hibernate</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.hbm2ddl.auto">create-drop</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
			</props>
		</property>
	</bean>
	
	<bean id="pid" class="com.scp.spring.hibernate.Product">
		<property name="prodId" value="101"/><!--  ref="hibernate3AnnotatedSessionFactory" --> 
		<property name="prodName" value="aaa"></property>
	</bean>
</beans>